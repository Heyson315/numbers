# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=100/minute

# Database Configuration
DATABASE_URL=sqlite:///./cpa_finance.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/cpa_finance

# Audit Logging
AUDIT_LOG_PATH=./logs/audit.log
AUDIT_LOG_RETENTION_DAYS=365

# AI Model Configuration
AI_MODEL_CACHE_DIR=./models
AI_CONFIDENCE_THRESHOLD=0.85

# Data Security
DATA_ENCRYPTION_ENABLED=true
SECURE_FILE_STORAGE_PATH=./secure_data
MAX_FILE_SIZE_MB=50

# Access Control
ADMIN_EMAIL=admin@cpafirm.com
REQUIRE_MFA=true

# Compliance
ENABLE_AUDIT_TRAIL=true
ENABLE_DATA_RETENTION_POLICY=true
DATA_RETENTION_YEARS=7

# QuickBooks Online Integration
QBO_CLIENT_ID=your-qbo-client-id
QBO_CLIENT_SECRET=your-qbo-client-secret
QBO_REDIRECT_URI=https://your-app.com/callback/quickbooks
QBO_ENVIRONMENT=sandbox
QBO_REALM_ID=your-company-id

# Microsoft 365 / Azure AD Integration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
M365_REDIRECT_URI=https://your-app.com/callback/microsoft
SHAREPOINT_SITE_ID=your-site-id
ONEDRIVE_ROOT_FOLDER=FinancialDocuments

# Compliance Settings (Extended)
HIPAA_AUDIT_LOG_RETENTION_DAYS=2190
GDPR_CONSENT_EXPIRY_DAYS=365
SOX_SEGREGATION_ENABLED=true

# ML Model Settings
ML_MODEL_PATH=./models
ML_TRAINING_DATA_PATH=./data/training
