# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=100/minute

# Database Configuration
DATABASE_URL=sqlite:///./cpa_finance.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/cpa_finance

# Audit Logging
AUDIT_LOG_PATH=./logs/audit.log
AUDIT_LOG_RETENTION_DAYS=365

# AI Model Configuration
AI_MODEL_CACHE_DIR=./models
AI_CONFIDENCE_THRESHOLD=0.85

# Data Security
DATA_ENCRYPTION_ENABLED=true
SECURE_FILE_STORAGE_PATH=./secure_data
MAX_FILE_SIZE_MB=50

# Access Control
ADMIN_EMAIL=admin@cpafirm.com
REQUIRE_MFA=true

# Compliance
ENABLE_AUDIT_TRAIL=true
ENABLE_DATA_RETENTION_POLICY=true
DATA_RETENTION_YEARS=7
