SMTP_USER=
SMTP_PASS=                        # Use GitHub Encrypted Secrets
CONTACT_EMAIL_TO=contact@yourfirm.com

# Security
ALLOWED_ORIGINS=https://yourfirm.com
RATE_LIMIT_MAX=5                  # Max contact form submissions/hour/IP
TURNSTILE_SECRET_KEY=             # Cloudflare Turnstile (spam protection)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=

# Feature Flags
ENABLE_SHAREPOINT_VIEWER=false
ENABLE_CALENDAR_EMBED=false
